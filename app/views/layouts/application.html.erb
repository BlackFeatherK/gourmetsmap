<!DOCTYPE html>
<html>
  <head>
    <title>Gourmetsmap</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Belleza" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
  </head>

  <body>


      <!-- 導覽列 -->
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <strong><%= link_to "Gourmets' Map", root_path, class: "navbar-brand" %></strong>
          </div>

          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

            <ul class="pull-right text-right nav navbar-nav">
            <% if current_user %>

              <% if current_user.admin? %>
                <li>
                  <%= link_to admin_restaurants_path, title: "Console Room" do %>
                    <i class="fa fa-list-alt fa-lg" aria-hidden="true"></i>
                  <% end %>
                </li>
              <% end %>

              <!-- 以下靠右 icons -->

              <li><p class= "navbar-text"><i class="fa fa-user-circle fa-lg"></i> Hi, <%=  current_user.email %></p></li>
              <li>
                <%= link_to destroy_user_session_path, title: "Sign out", method: :delete do %>
                <%= icon('fa', 'sign-out-alt', class: 'fa-lg') %>
                <% end %>
              </li>
              <li>
                <%= link_to edit_user_registration_path, title: "Change Password" do %>
                <%= icon('fas', 'cog', class: 'fa-lg') %>
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to new_user_registration_path, title: "Register!" do %>
                <i class="fas fa-registered fa-lg"></i>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_session_path, title: "Log in!" do %>
                <i class="fas fa-sign-in-alt fa-lg"></i>
              <% end %>
              </li>


            <% end %>        
            </ul>

          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->

      </nav>

      <% if flash[:notice] %>

        <div class="alert alert-success alert-dismissible" role="alert">
          <button class="close" type="button" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <strong><%= notice %></strong>
        </div>

      <% end %>

      <% if flash[:alert] %>

        <div class="alert alert-warning alert-dismissible" role="alert">
          <button class="close" type="button" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <strong><%= alert %></strong>
        </div>

      <% end %>
    
    <div id="bg">
      <%= image_tag "console-background.jpg" %>
    </div>
    <%= yield %>
    
  </body>
</html>
