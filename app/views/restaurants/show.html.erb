<div class="container">
  <h2>Delicacies</h2>
  <div class="row">
    <div class="col-md-12">
      <nav aria-label="...">
        <ul class="pager">
          <li><a href="#">Previous</a></li>
          <li><%= link_to 'âœª Index', restaurants_path %></li>
          <li><a href="#">Next</a></li>
        </ul>
      </nav>
      <hr>
      
      <!---------  Show Section ------------->
      <div class="col-md-offset-1 overlay-b">
        <div class="show-block text-center">
          <div class="show-name">
            <h2 class="word-wt"><%= @restaurant.name %></h2>
            <p class="label label-default"><%= @restaurant.category.name %></p>
          </div>
          <div>
            <%= link_to 'Edit', edit_admin_restaurant_path(@restaurant), class: "btn btn-warning btn-xs" %>
                  <%= link_to 'Delete', admin_restaurant_path(@restaurant), class: "btn btn-danger btn-xs", method: :delete, data: {confirm: "Are you sure?"} %>
          </div>
          <p class="word-wt">--------------------------------------</br>
          Opening Hour: <%= @restaurant.opening_hour %><br>
          Tel: <%= @restaurant.tel%><br>
          Address: <%= @restaurant.address%><br>
          --------------------------------------</p>
          <p class="word-wt"><strong>Restaurant Photo:</strong></p>
          <%= image_tag @restaurant.image, width: '400px' %><br>
          <p class="word-wt"><br>------------------------------------------------</p>
          <div class= "word-wt show-block-des">
            <%= @restaurant.description %><br><br>
          </div>
        </div>

        <hr>
        
        <!----------- Comment Section ------------>
        <div class="show-comment">
          <%= form_for [@restaurant, @comment] do |f| %>
            <div class="form-group">
              <%= f.text_area :content, placeholder: "Leave your comments?", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.submit class: "btn" %>
              <%= f.button "Cancel", type: :reset, class: "btn" %>
            </div>
          <% end %>
        </div>

      </div>
      <hr>
      <nav aria-label="...">
          <ul class="pager">
            <li class="previous disabled"><a href="#"><span aria-hidden="true">&larr;</span> Older</a></li>
            <li class="next"><a href="#">Newer <span aria-hidden="true">&rarr;</span></a></li>
          </ul>
      </nav>
      <br><br>

    </div>
    
  </div>
</div>




