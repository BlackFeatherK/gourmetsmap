<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1 font-shadow page-header">
      <h1>I have <%= current_user.all_friends.count %> friends!</h1>
    </div>

    <div class="col-md-offset-1">

      <% @friends.each do |friend| %>

        <div class="col-md-8 col-md-6 user-card-2">
          <%= link_to user_path(friend) do %>
            <%= image_tag friend.avatar, width: "100%" %>
            <div class="user-follow">
              <h4><%= friend.name %></h4>
          <% end %>
              <p>
                <%= render partial: "shared/follow", locals: {user: friend} %>
                <%= render partial: "shared/friend-btn", locals: {user: friend} %>
              </p>

            </div>
          
        </div>
      <% end %>

    </div>
  </div>
</div>