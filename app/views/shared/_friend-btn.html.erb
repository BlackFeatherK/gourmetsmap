<% if user != current_user %>
  <% if current_user.friend?(user) %>
    <%= link_to 'x Friend', friendship_path(user), method: :delete, class: "btn btn-danger btn-sm" %>
  <% else %>
    <%= link_to '+ Friend', friendships_path(friend_id: user), method: :post, class: "btn btn-info btn-sm" %>
  <% end %>
<% end %>
