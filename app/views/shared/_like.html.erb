<div class="favor-btn">
  <% if restaurant.is_liked?(current_user) %>
    <%= link_to unlike_restaurant_path(restaurant), method: :post do %>
      <i class="fas fa-thumbs-up fa-lg"><%= restaurant.likes_count %></i>
    <% end %>
  <% else %>
    <%= link_to like_restaurant_path(restaurant), method: :post do %>
      <i class="far fa-thumbs-up fa-lg"><%= restaurant.likes_count %></i>
    <% end %>
  <% end %>
</div>
