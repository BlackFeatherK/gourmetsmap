<% if user != current_user %>
  <% if current_user.following?(user) %>
    <%= link_to 'UnFollow', followship_path(user), method: :delete, class: "btn btn-warning btn-sm" %>
  <% else %>
    <%= link_to 'Follow', followships_path(following_id: user), method: :post, class: "btn btn-success btn-sm" %>
  <% end %>
<% end %>