<% if @restaurant.errors.any? %>
  <h2>We have some errors here!</h2>
  <ul>
    <% @restaurant.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<h1>Pin a New Restaurant</h1>

<%= form_for [:admin, @restaurant] do |f| %>
  <%= f.label :name, "Name"%>
  <%= f.text_field :name%>

  <%= f.label :opening_hour, "Opening Hour"%>
  <%= f.text_field :opening_hour%>

  <%= f.label :tel, "Tel" %>
  <%= f.text_field :tel %>

  <%= f.label :address, "Address" %>
  <%= f.text_field :address%>

  <%= f.label :description, "Description" %>
  <%= f.text_area :description%>

  <%= f.label :image, "Restaurant Photo" %>
  <%= image_tag @restaurant.image, width: '200px' if @restaurant.image? %>
  <%= f.file_field :image %>
  
  <%= f.submit %>
<% end %>